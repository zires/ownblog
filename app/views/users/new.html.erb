<% form_for(:user,:url => users_path) do |f| -%>
 		<p>
  		<%= f.label :login %>
  		<%= f.text_field :login %>
		</p>
		<p>
  		<%= f.label :name %>
  		<%= f.text_field :name %>
		</p>
		<p>
  		<%= f.label :email %>
  		<%= f.text_field :email %>
		</p>
		<p>
  		<%= f.label :password %>
  		<%= f.password_field :password %>
		</p>
		<p>
  		<%= f.label :confirmpassword %>
  		<%= f.password_field :password_confirmation %>
		</p>
      
 <p>
    <%= submit_tag t('create',:scope =>'user.new') %>
 </p>
 <% end -%>