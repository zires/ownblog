<div id="newpic">
<% form_for :pic, :url => pics_path, :html => { :multipart => true} do |f| -%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category %>
    <%= f.text_field :pic_category_id %>
  </p>   
  <p>
    <b>Upload Image</b><br />
    <%= f.file_field :image_file%><br />
    or URL: <%= f.text_field :image_file_url %>
  </p>
  <p>
			<%= link_to "新建分类",new_category_path,:popup => true %>
	</p>
  <p>
    <%= f.submit "Create" %>
  </p>  
<% end -%>
</div>